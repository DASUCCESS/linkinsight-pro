{
  "manifest_version": 3,
  "name": "LinkInsight Pro Connector",
  "version": "1.1.0",
  "description": "Sync your LinkedIn profile and posts with LinkInsight Pro.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "LinkInsight Pro",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
